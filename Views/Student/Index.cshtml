@{
    Layout = "_StudentLayout";
}

@{
    ViewData["Title"] = "Students";
}

@model IEnumerable<StudentModel>

<html>
<head>
    <title>Student Table</title>

    <style>
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 10px; /* Adjust the spacing value as needed */
        }

        th, td {
            padding: 8px;
            text-align: left;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th>Department</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr data-student-id="@student.ID">
                    <td>@student.ID</td>
                    <td>@student.Name</td>
                    <td>@student.Surname</td>
                    <td>@student.Age</td>
                    <td>@student.Department</td>
                    <td><a href="#" class="delete-link" data-id="@student.ID" data-url="/Student/Delete/@student.ID">Delete</a></td>
                    <td><a asp-action="Edit" asp-controller="Student" asp-route-id="@student.ID">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".delete-link").click(function (e) {
                e.preventDefault(); // Prevent the default link behavior

                var studentId = $(this).data("id");
                var deleteUrl = $(this).data("url");
                var rowToRemove = $(this).closest("tr"); // Get the row to remove

                var confirmation = confirm('Are you sure you want to delete this student?');

                if (confirmation) {
                    $.ajax({
                        url: deleteUrl,
                        type: "POST",
                        success: function (result) {
                            
                            if (result.success) {
                                // Remove the row from the table
                                rowToRemove.remove();
                                alert("Student deleted successfully");
                            } else {
                                alert("Failed to delete student");
                            }
                        },
                        error: function () {
                            
                            alert("An error occurred while deleting the student");
                        }
                    });
                } else {
                    // User clicked "Cancel" - do nothing
                }
            });
        });
{       
}
    </script>
</body>
</html>

