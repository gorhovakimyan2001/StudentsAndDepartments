
@{
    Layout = "_DepLayout";
}
@{
    ViewData["Title"] = "Departaments";
}

@model IEnumerable<DepModel>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Define CSS styles for the table */
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            
            color: black;
        }
    </style>
</head>
<body>
    <h1>Department Information</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Count</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-dep-id="@item.ID">
                    
                    <td>@item.Name</td>
                    <td>@item.Count</td>
                    <td><a asp-action="Delete" asp-controller="Department" asp-route-id="@item.ID">Delete</a></td>
                    <td><a asp-action="Edit" asp-controller="Student" asp-route-id="@item.ID">Edit</a></td>
                </tr>
            }
        </tbody>
        
    </table>
</body>
</html>