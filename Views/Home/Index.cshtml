@{
    ViewData["Title"] = "American University of Armenia";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to University</title>
</head>
<body>

<section class="welcome">
    <div class="welcome-content">
        <h1>Welcome to Our University</h1>
        <p>Where knowledge meets innovation</p>
            <a class="btn" asp-area="" asp-controller="Home" asp-action="LearnMore">Learn More</a>
    </div>
</section>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }

    .welcome {
        text-align: center;
        padding: 100px 0;
    }

    .welcome-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .welcome h1 {
        font-size: 36px;
        margin-bottom: 20px;
    }

    .welcome p {
        font-size: 18px;
        margin-bottom: 30px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f2c200;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #e0b700;
        }
</style>
</body>
</html>
